{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["dom", "dom.iterable", "es2020"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "es2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "react-jsx",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"sourceMap": true
	},
	"include": ["index.tsx"],
	"exclude": ["node_modules", "dist", "example.tsx"]
}
